#set -x;
. /usr/local/etc/disk-tools.sh

checkroot;

load_cmdline;
SHRED_RUN=""

smart_shred() {
  # If smart fails, run shred, then run smart again
  smart-all -a
  if [ "$(smart_status)" != "1" ]; then
    shred-all super-long auto
    SHRED_RUN="1"
    smart-all -a
  fi
}

[ -x /usr/local/etc/init.d/lcdproc ] && /usr/local/etc/init.d/lcdproc start 2>/dev/null

if [ -z "$SITE" -o "$SITE" = "DEFAULT" ]; then
  fsck-all short yes
elif [ "$SITE" = "TS" ]; then
  fsck-all long yes
  prompt_lcd
  smart-all -a
  run_hdparm
elif [ "$SITE" = "HDD" ]; then
  smart_shred
  run_hdparm
elif [ "$SITE" = "FA" ]; then
  prompt_system
  detect_cards
  prompt_lcd
  smart_shred
  run_hdparm
  network-tests -i $NETWORK_TEST_SERVER -o $L_NETWORK
  network-tests-stats $L_NETWORK
  [ -z "$SHRED_RUN" ] && shred-all long auto
fi

# Bundle logs
tar -C /tmp -zxf tools-logs.tar.gz "${LOG_DIR##/tmp/}"/*
