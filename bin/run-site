#set -x;
. /usr/local/etc/disk-tools.sh

checkroot;

load_cmdline;
SHRED_RUN=""

call_shred() {
  if [ "$(all_ssd)" = "1" ]; then
    # log to shred log that this is ssd and we won't shred
    printf "\n\nSSDs detected, skipping shred. Run Security Erase instead\n\n"|
      tee -a L_SHRED
    return
  fi
  shred-all $@ auto
  SHRED_RUN="1"
}

smart_shred() {
  # If smart fails, run shred, then run smart again
  identify_drives;
  smart_process;
  if [ "$(smart_status_all)" != "1" ]; then
    call_shred "super-long";
    smart_process;
  fi
}

[ -x /usr/local/etc/init.d/lcdproc ] && /usr/local/etc/init.d/lcdproc start 2>/dev/null

if [ -z "$SITE" -o "$SITE" = "DEFAULT" ]; then
  fsck-all short yes
elif [ "$SITE" = "TS" ]; then
  fsck-all long yes
  prompt_lcd
  smart_process;
  run_hdparm
elif [ "$SITE" = "HDD" ]; then
  smart_shred
  run_hdparm
elif [ "$SITE" = "FA" ]; then
  prompt_system
  detect_cards
  prompt_lcd
  smart_shred
  run_hdparm
  network-tests -i $NETWORK_TEST_SERVER -o $L_NETWORK
  network-tests-stats $L_NETWORK
  [ -z "$SHRED_RUN" ] && call_shred long
fi

# Bundle logs
tar -C /tmp -cxf tools-logs.tar.gz "${LOG_DIR##/tmp/}"/*
